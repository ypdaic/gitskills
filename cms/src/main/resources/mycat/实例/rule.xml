<!DOCTYPE mycat:rule SYSTEM "rule.dtd">
<mycat:rule xmlns:mycat="http://io.mycat/">

	<tableRule name="prefix-pattern">
		<rule>
			<columns>login_name</columns>
			<algorithm>prefix-pattern</algorithm>
		</rule>
	</tableRule>	
	
	<tableRule name="buyer-sharding-by-pattern">
		<rule>
			<columns>buyer_user_id</columns>
			<algorithm>sharding-by-pattern</algorithm>
		</rule>
	</tableRule>
	
	<tableRule name="merchant-sharding-by-pattern">
		<rule>
			<columns>merchant_user_id</columns>
			<algorithm>sharding-by-pattern</algorithm>
		</rule>
	</tableRule>
	
	<tableRule name="user-mod-long">
		<rule>
			<columns>id</columns>
			<algorithm>mod-long</algorithm>
		</rule>
	</tableRule>
	
	<function name="sharding-by-pattern"
			  class="io.mycat.route.function.PartitionByPattern">
		<property name="patternValue">256</property>
		<property name="mapFile">partition-pattern.txt</property>
	</function>	
	
	<function name="mod-long" class="io.mycat.route.function.PartitionByMod">
		<!-- how many data nodes -->
		<property name="count">3</property>
	</function>	
	
	<!-- 截取数字做hash 求模范围约束-->
	<function name="prefix-pattern" class="io.mycat.route.function.PartitionByPrefixPattern">
		<property name="patternValue">256</property>
		<property name="prefixLength">8</property>
		<property name="mapFile">prefix-pattern.txt</property>
	</function>	

</mycat:rule>
